<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="fontRobotoRegular">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="main_text_40sp" parent="@style/fontRobotoRegular">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="details_header_text_40sp" parent="@style/fontRobotoRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:shadowColor">@color/black_shadow_80</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="main_text_14sp" parent="@style/fontRobotoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_text_14sp" parent="@style/fontRobotoRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="main_text_12sp" parent="@style/fontRobotoRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="grayed_text_8sp" parent="@style/fontRobotoRegular">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/text_grayed</item>
    </style>

    <style name="grayed_text_14sp" parent="@style/fontRobotoRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grayed</item>
    </style>

    <style name="red_text_8sp" parent="@style/fontRobotoRegular">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="red_text_14sp" parent="@style/fontRobotoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:minHeight">13.02dp</item>
        <item name="android:maxHeight">13.2dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:maxWidth">12dp</item>
        <item name="colorControlNormal">@color/rating_inactive</item>
        <item name="colorControlActivated">@color/rating_active</item>
    </style>
</resources>